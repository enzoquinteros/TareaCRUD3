<div class="container" style="margin: 100px 0">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar el producto</h4>
            <form action="/admin/precios/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{precio.id}}" name="id">
                <div class="form-group">
                    <label for="">Nombre</label>
                    <input type="text" class="form-control" name="nombre" value="{{precio.nombre}}">
                </div>
                <div class="form-group">
                    <p>
                        <label>Imagen<input type="file" name="imagen" id="imagen"></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1">Eliminar imagen actual?</label>
                        <input type="hidden" name="img_original" value="{{precio.img_id}}">
                    </p>
                <div class="form-group">
                    <label for="">Precio</label>
                    <input type="number" class="form-control" name="precio" value="{{precio.precio}}">
                </div>
                <div class="form-group">
                    <label for="">Descripcion</label>
                    <textarea name="descripcion" class="form-control">{{precio.descripcion}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
                <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>